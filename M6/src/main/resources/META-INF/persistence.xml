<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
	version="3.0">
	
<!--	//persistence unit tells JPA how to connect to the database, which entities to manage, and which settings to use.-->
	<persistence-unit name="default"
		transaction-type="RESOURCE_LOCAL">
		

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
<!--		<class>com.bpi.M6_Activity2.model.Student</class>-->
		<class>com.bpi.M6_Activity3.model.Student</class>
		<class>com.bpi.M6_Activity3.model.Course</class>

		<properties>
			<!-- JDBC connection -->
			<property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/training_db" />
			<property name="jakarta.persistence.jdbc.user" value="GSTJLlagano" />
			<property name="jakarta.persistence.jdbc.password" value="bpi_postgres" />

			<!-- Hibernate dialect -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="none" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>

